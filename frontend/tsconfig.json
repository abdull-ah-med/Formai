{
        "compilerOptions": {
                "target": "ESNext",
                "lib": ["DOM", "DOM.Iterable", "ESNext"],
                "module": "ESNext",
                "moduleResolution": "Node",
                "strict": true,
                "esModuleInterop": true,
                "skipLibCheck": true,
                "allowSyntheticDefaultImports": true,
                "resolveJsonModule": true,
                "isolatedModules": true,
                "noEmit": true,
                "jsx": "react-jsx",
                "baseUrl": ".",
                "paths": {
                        "@/*": ["src/*"],
                        "@formai/types": ["../packages/types/src"]
                }
        },
        "include": ["src"],
        "exclude": ["node_modules", "dist"]
}
